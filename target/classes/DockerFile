#De la imagen que partimos
FROM frolvlad/alpine-oraclejdk8:slim
 
#Directorio de trabajo
WORKDIR /app
 
#Copiamos el uber-jar en el directorio de trabajo
COPY .target/ejemploREST-0.0.1-SNAPSHOT.jar /app
 
#Exponemos el puerto 9000
EXPOSE 9000
 
#Comando que se ejecutar√° una vez ejecutemos el contendor
CMD ["java","-jar","gs-spring-boot-docker-0.1.0.jar"]